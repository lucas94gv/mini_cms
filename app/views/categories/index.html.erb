<h1>CATEGORÍAS</h1>

<div>
    <%= link_to "Nueva Categoría Padre", new_category_path %>
</div>

<% @categories.each do |category| %>
    <div>
        <%= category.name %>
        <%= link_to "Editar", edit_category_path(category) %>
        <%= link_to "Eliminar", category, :method => :delete, :data => { :confirm => 'Estás Seguro?' } %>
    </div>
<% end %>